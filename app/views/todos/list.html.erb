<h1>Lista de To Do</h1>

<div class="row">
  <div class="col-lg-6">
    <% @todos.each do |todo| %>
      <% if !todo.completed %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <p class="card-text"><%= todo.description %></p>
          <p class="card-text"><%= todo.completed %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

